{# extends "/dashboard/pro/dashboard-list-base.html.twig" #}
{% extends "/template/base.html.twig" %}

{% block title %}
    Ajouter ou modifier une reclamation
{% endblock title %}

{% block list_title %}
    Ajouter ou modifier une Reclamation
{% endblock list_title %}
{% block body %}
{% block table %}

    {{ form_start(f) }}







    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.type) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}

        </div>
    </div>

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.nomClient) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.nomClient,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.nomClient) }}

        </div>
    </div>


    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.email) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.email) }}
        </div>
    </div>




    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.date) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.date,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.date) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.contenu) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.contenu,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.contenu) }}
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            {{ form_widget(f.captcha,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.captcha) }}
        </div>
    </div>

{% endblock table %}

    {% block buttons %}

            <div class="form-group row">
                {{ form_widget(f.ajouter,{'attr':{'class':'btn'}}) }}


            <input type="reset" class="btn btn-danger">
            </div>

        {{form_end(f)}}
    {% endblock buttons %}
 {% block add_scripts %}
     <script src="{{ asset('dashboard_style/assets/plugins/moment/moment.js') }}"></script>
