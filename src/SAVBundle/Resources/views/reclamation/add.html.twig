     <script src="{{ asset('dashboard_style/assets/plugins/timepicker/bootstrap-material-datetimepicker.js') }}"></script>
     <script src="{{ asset('dashboard_style/assets/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js') }}"></script>
     <script src=".{{ asset('dashboard_style/assets/plugins/bootstrap-touchspin/js/jquery.bootstrap-touchspin.min.js') }}"></script>

     <script src="{{ asset('dashboard_style/assets/pages/jquery.forms-advanced.js') }}"></script>

 {% endblock add_scripts %}
{% endblock body %}
