{% endblock list_title %}

{% block table %}

    {{ form_start(f) }}



    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.nomResponsable) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.nomResponsable,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.nomResponsable) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.repo) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.repo,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.repo) }}
        </div>
    </div>
    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.dateRep) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.dateRep,{'attr':{'class':'form-control'}}) }}
            {{ form_errors(f.dateRep) }}
        </div>
    </div>

{% endblock table %}

    {% block buttons %}
        <div >

            <input type="submit" class="btn btn-outline-success">
            <input type="reset" class="btn btn-danger">

        </div>

        {{form_end(f)}}
