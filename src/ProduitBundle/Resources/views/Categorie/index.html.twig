{% extends '/dashboard/pro/dashboard-list-base.html.twig' %}
 {% block title %}
  Portail produits
 {% endblock %}

{% block list_title %}Liste des produits sur Shoppy {% endblock list_title %}

 {% block table %}

  <thead>
  <tr>
   <th>id</th>
   <th>nom</th>
   <th>Action</th>
  </tr>
  </thead>

  {% for i in data  %}
   <tr>
    <td>{{ i.id }}</td>
    <td>{{ i.nom}}</td>
    <td><a href={{ path('categorie_supprimer',{'id':i.id}) }}><i class="far fa-trash-alt text-danger"></i></a>
     <a href={{ path('categorie_modifier',{'id':i.id}) }}><i class="far fa-edit text-info mr-1"></i></a>
    </td>
   </tr>
  {% endfor %}

 {% endblock table %}


 {% block buttons %}
 <a href={{ path('categorie_ajouter') }}><img src="{{ asset('dashboard_style/assets/images/plus.png') }}"/></a>
 {% endblock buttons %}