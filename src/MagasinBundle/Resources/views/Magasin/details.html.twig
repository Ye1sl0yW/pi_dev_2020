{% extends "/dashboard/pro/dashboard-list-base.html.twig" %}

{% block title %}
    Détail magasin {{ data.getNom() }}
{% endblock title %}

{% block list_title %}Liste des Magasins partenaires{% endblock list_title %}

{% block table %}
    <h3>Bienvenue à la page de gestion de {{ data.nom }}</h3>
    <h5>Détails du magasin:</h5>

    <table >
    <thead>
    <tr>
        <th>Nom</th>
        <th></th>
        <th>Taille du stock</th>
        <th>Offres en cours</th>
        <th>Offres planifiées</th>
        <th>Matricule fiscal</th>
    </tr>
    </thead>

        <tr>
            <td>{{data.nom}}</td>
            <td></td>
            <td>{{ data.tailleStock}}</td>
            <td>{{ offres }}</td>
            <td>{{ offres_futures }}</td>
            <td>{{ data.matriculeFiscal}}</td>
        </tr>
        </table>

    <br>
    <br>

    <table class="tabcontrol">
        <tr>

            <td>
                <button class="btn-blue" id="charts-toggle"> Afficher les statistiques </button>
            </td>
            <td>
                <a href="{{ path('magasin_products',{'id':data.id}) }}">
                    <button class="btn-blue"> Gérer vos produits </button>
                </a>
            </td>
            <td>
                <a href="{{ path('magasin_offers',{'id':data.id}) }}">
                    <button class="btn-blue"> Gérer vos offres </button>
                </a>
            </td>
            <td>
                <button class="btn-blue"> Consulter vos rattachements </button>
            </td>
        </tr>

{% endblock table %}

{% block append_content %}
    <br>
    <br>

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="chart-demo">
                        <div id="apex_line1" class="apex-charts">
                            <div id="div_chart"></div>
                            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                            <script type="text/javascript">
                                {{ gc_draw(piechart, 'div_chart') }}
                            </script>
                        </div>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="chart-demo">
                        <div id="apex_line2" class="apex-charts">
                            <div id="div_chart_2"></div>
                            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                            <script type="text/javascript">
                                {{ gc_draw(piechart2, 'div_chart_2') }}
                            </script>
                        </div>
                    </div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div><!--end row-->

<script type="text/javascript" src="{{ asset('js/jquery/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('custom_made/toggle_charts.js') }}"></script>

{% endblock append_content %}