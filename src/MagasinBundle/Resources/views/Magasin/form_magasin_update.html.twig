{% extends "/dashboard/pro/dashboard-list-base.html.twig" %}

{% block title %}
Modifier un magasin
{% endblock title %}

{% block list_title %}
Ajouter ou modifier un magasin
{% endblock list_title %}

{% block table %}

 {{ form_start(f) }}

 <div class="form-group row">
  <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.nom) }}</label>
  <div class="col-sm-10">
   {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
  </div>
 </div>

 <div class="form-group row">
  <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.matriculeFiscal) }}</label>
  <div class="col-sm-10">
   {{ form_widget(f.matriculeFiscal,{'attr':{'class':'form-control'}}) }}
  </div>
 </div>

 {% if elem.getIdVendeur()==null %}
 <div class="form-group row">
  <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.id_vendeur) }}</label>
  <div class="col-sm-10">
   {{ form_widget(f.id_vendeur,{'attr':{'class':'form-control'}}) }}
  </div>
 </div>
 {% endif %}

{% endblock table %}

{% block buttons %}
 <div >
  {{ form_widget(f.Valider, {'attr':{'class':'btn btn-gradient-primary'}} ) }}
  <a href="{{ path('magasin_homepage') }}"><button type="button" class="btn btn-gradient-danger">Annuler</button></a>
 </div>

{% endblock buttons %}
