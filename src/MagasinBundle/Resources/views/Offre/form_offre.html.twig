{% extends "/dashboard/pro/dashboard-list-base.html.twig" %}

{% block title %}
    Ajouter ou modifier une offre
{% endblock title %}

{% block list_title %}
    Ajouter ou modifier une offre
{% endblock list_title %}

{% block table %}

    {{ form_start(f) }}

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.nom) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.description) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>


    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.taux) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.taux,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>


    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">Magasin organisateur</label>
        <div class="col-sm-10">
            {{ form_widget(f.id_magasin,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right">{{ form_label(f.dateDebut) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.dateDebut,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>

    <div class="form-group row">
        <label for="example-text-input" class="col-sm-2 col-form-label text-right"><i class="dripicons-calendar"></i>{{ form_label(f.dateFin) }}</label>
        <div class="col-sm-10">
            {{ form_widget(f.dateFin,{'attr':{'class':'form-control'}}) }}
        </div>
    </div>
    
{% endblock table %}
    {% block buttons %}
    <div >
        {{ form_widget(f.Valider, {'attr':{'class':'btn btn-gradient-primary'}} ) }}
        <a href="{{ path('magasin_homepage') }}"><button type="button" class="btn btn-gradient-danger">Annuler</button></a>
    </div>
    {{form_end(f)}}
    {% endblock buttons %}

