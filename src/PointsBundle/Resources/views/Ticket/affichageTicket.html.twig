{% extends "/dashboard/pro/dashboard-list-base.html.twig" %}
{% block title %}
    Magasins Shoppy
{% endblock title %}
{% block list_title %}Liste des Tickets{% endblock list_title %}
{% block table %}

{% if tab == NULL %}
    <h3>Pas de Tickets</h3>
{% else %}
    <table border="1">
        <tr>
            <td>ID</td>
            <td>Montant</td>
            <td>Date d'expiration</td>
            <td>Action</td>
        </tr>
        {% for i in tab  %}
            <tr>
                <td>{{ i.getId()}}</td>
                <td>{{ i.getMontant()}}</td>
                <td>{{ i.DateExp()|date('Y-m-d')}}</td>
                <td><a href="{{ path('ticket_supprimer',{'id': i.getId()}) }}"><button>Supprimer</button></a><a href="{{ path('ticket_modifier',{'id': i.getId()}) }}"><button>Modifier</button></a></td>


            </tr>
        {% endfor %}
    </table>
{% endif %}
    <h1>TOTAL : {{ total }} points</h1>
    <h1>TOTAL : {{ total / 200 }} DT</h1>

    <a href="{{ path('ticket_ajout')}}"><button>Ajout ticket</button></a>
{% endblock table %}

